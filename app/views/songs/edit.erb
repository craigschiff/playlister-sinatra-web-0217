<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <form method="post" action="/songs/<%= @song.slug %>">
    <label>Song Name</label>
    <input type="text" name="song[:name]" value="<%= @song.name %>"><br />

    <label>Artist Name:</label>
    <input id="Artist Name" type="text" name="artist[:name]" value="<%= @song.artist.name %>"><br />

    <label>Genres</label>
    <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genre_id[]" value="<%= genre.id %>" <%= 'checked' if @song.genre_ids.include? (genre.id) %>><%= genre.name %></input><br />

    <% end %>

    <input type="submit" value="Save">



    </form>
  </body>
</html>
